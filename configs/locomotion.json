{
    "Glow": {
        "in_channels": 3,
        "hidden_channels": 32, 
        "K": 3,
        "L": 3,
        "joints": 21,
        "length": 20,
        "actnorm_scale": 1.0, 
        "flow_permutation": "invconv", 
        "flow_coupling": "affine", 
        "net_type": "gcn",
        "graph_scale": 1,
        "layout": "locomotion",
        "LU_decomposed": true
    },

    "Optim": {
        "name": "adam",
        "lr": 1e-6,
        "betas": [0.9, 0.999],
        "eps": 1e-8
    },

    "Schedule": {
        "name": "noam",
        "warmup": 40000,
        "minimum": 1e-6
    },
    
    "Data": {
        "dir": "data/locomotion",
        "framerate": 20,
        "mirror": true,
        "reverse_time": false,
        "shuffle": true,
        "seqlen": 16,
        "overlap": 8
    },

    "Train": {
        "batch_size": 100,
        "num_epochs": 10000,
        "log": "results/locomotion",
        "check_gap": 1000,
        "max_grad_clip": 5,
        "max_grad_norm": 100,
        "num_workers": 4,
        "scalar_log_gap": 50,
        "validation_log_gap": 1000,
        "test_log_gap": 1000
    }
}